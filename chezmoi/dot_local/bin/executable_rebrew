#!/usr/bin/env bash
#
# Re-install all Homebrew packages.
#
# @mikemcquaid of Homebrew says this is a good idea after performing an OS upgrade
#
set -euo pipefail

echo "â˜•ï¸ Re-brewingâ€¦"

