#!/usr/bin/env bash
#
# Re-install all Homebrew packages.
#
# @mikemcquaid of Homebrew says this is a good idea after performing an OS upgrade
#
set -euo pipefail
DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)
# shellcheck source=script/lib.sh
source "$DIR/script/lib.sh"

info "‚òïÔ∏è Re-brewing‚Ä¶"

cd /tmp
brew bundle dump
# shellcheck disable=SC2046
brew uninstall --force $(brew list)
brew bundle

printf "\\n\\033[01;32m%s\033[0m\\n\\n" 'üèÅ All done!!'